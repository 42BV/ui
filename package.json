{
  "private": true,
  "scripts": {
    "clean": "lerna run --parallel clean && lerna clean --yes",
    "test-only": "jest",
    "test": "yarn lint && yarn test-only",
    "lint": "eslint . --cache --max-warnings=0",
    "build": "lerna bootstrap && lerna run build",
